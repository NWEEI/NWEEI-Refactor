@model List<Category>

@{
    ViewData["Title"] = "Manage Categories";
}

<div class="container">
    <div>
        <div class="content-header">
            <h1>Manage Categories</h1>

            <!-- admin edit button -->
            <span class="admin-action-button btn btn-primary"><a asp-action="Create">Add Category</a></span>
        </div>

    </div>
    <table class="table">
        <thead>
            <tr>
                <th class="title">Category Name</th>
                <th class="text-center">Number of Articles</th>
                <th class="text-center">Manage</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="title">@Html.DisplayFor(modelItem => item.Name)</td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Articles.Count)
                        &nbsp;&nbsp;|&nbsp;&nbsp;
                        <a asp-controller="Article" asp-action="Manage"
                           asp-route-categoryID="@item.CategoryID">View Articles</a>
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.CategoryID">Edit</a>
                        &nbsp;&nbsp;|&nbsp;&nbsp;
                        <a asp-action="Delete" asp-route-id="@item.CategoryID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>