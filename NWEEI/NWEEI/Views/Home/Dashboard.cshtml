
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Manage:</h3>
<div class="container">
    <div class="row justify-content-around">
        <a class="dashboard-tile col-auto" asp-controller="AppUser" asp-action="Index">
            <i class="fa-solid fa-user-pen fa-3x"></i><br />
            Users
        </a>
        <a class="dashboard-tile col-auto" asp-controller="Article" asp-action="Index">
            <i class="fa-solid fa-newspaper fa-3x"></i><br />
            Articles
        </a>
        <a class="dashboard-tile col-auto" asp-controller="Registration" asp-action="Index">
            <i class="fa-solid fa-address-card fa-3x"></i><br />
            Registrations
        </a>
    </div>
    <div class="row justify-content-around">
        <a class="dashboard-tile col-auto" asp-controller="Category" asp-action="Index">
            <i class="fa-solid fa-table-columns fa-3x"></i><br />
            Categories
        </a>
        <a class="dashboard-tile col-auto" asp-controller="Organization" asp-action="Index">
            <i class="fa-solid fa-building fa-3x"></i><br />
            Organizations
        </a>
        <a class="dashboard-tile col-auto" asp-controller="Categorie" asp-action="Index">
            <i class="fa-solid fa-hashtag fa-3x"></i><br />
            Tags
        </a>
    </div>
</div>

