@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<div class="navigation bg-dark">
    @if (SignInManager.IsSignedIn(User))
    {
        <span class="nav-item">
            <a class="nav-link text-light bg-dark btn btn-outline-primary" asp-controller="Home" asp-action="Dashboard">Dashboard</a>
        </span>
        @if (User.IsInRole("Admin"))
        {
            @* <!-- Button - Send Test Email -->
            <span class="nav-item">
                <a class="nav-link text-light bg-dark btn btn-outline-primary" asp-controller="Mail" asp-action="SMTPTest">Send Test Email</a>
            </span> 
            *@
        }
        <span class="navbar-text">
            <a class="nav-link text-light bg-dark btn btn-outline-primary" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Edit Profile</a>
        </span>
        <span class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link text-light bg-dark btn btn-outline-primary">Logout</button>
            </form>
        </span>
    }
    else
    {
        <span class="nav-item">
            <a class="nav-link text-light bg-dark btn btn-outline-primary" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </span>
    }
</div>
