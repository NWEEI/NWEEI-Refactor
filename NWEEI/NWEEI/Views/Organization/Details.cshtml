@model NWEEI.Models.Organization

@{
    ViewData["Title"] = Model.Name;
}

<div class="custom-breadcrumb">
    <a asp-controller="Resources" asp-action="IndustryAssociations">
        <span class="breadcrumb-icon"><i class="fa fa-chevron-left" aria-hidden="true"></i></span>
        <span class="breadcrumb-name">Back to Industry Associations</span>
    </a>
</div>

<div>
    <div class="content-header row">
        <div class="col-10">
            <!-- org logo and name -->
            <img class="org-details-logo" src="@Model.ImageURL" />
            <h1>@Model.Name</h1>
        </div>

        <div class="col-2">
            <!-- admin edit button -->
            @if (User.IsInRole("Admin"))
            {
                <span class="admin-action-button btn btn-primary" style="margin-right: 15px;">
                    <a asp-action="Edit" asp-route-id="@Model.OrganizationID">Edit Organization</a>
                </span>
            }
        </div>

    </div>


    <hr />

    <!-- org description -->
    <div>
        @Html.Raw(Model.Description)
    </div>

    <!-- website button -->
    <div class="button-group row">
        <a href="@Model.WebsiteURL" class="btn btn-primary" target="_blank">Visit Website</a>
    </div>

</div>
