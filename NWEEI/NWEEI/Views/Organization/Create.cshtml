@model NWEEI.Models.Organization

@{
    ViewData [ "Title" ] = "Create";
    // get the tags select list from ViewData
    var tags = ( SelectList ) ViewData [ "Tags" ];
}

<h1>Add an Organization</h1>
<hr />
<div class="row">
    <div class="col-auto">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Organization Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <link rel="stylesheet" href="/richtexteditor/rte_theme_default.css" />
                <script type="text/javascript" src="/richtexteditor/rte.js"></script>
                <script type="text/javascript" src='/richtexteditor/plugins/all_plugins.js'></script>
                <script type="text/javascript" src="/rte-upload.js"></script>
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" name="htmlcode" id="inp_htmlcode" type="hidden" class="form-control" />
                <div id="div_editor1" class="richtexteditor" style="width: 960px;margin:0 auto;"></div>
                <script>
                    var editor1 = new RichTextEditor(document.getElementById("div_editor1"));
                    editor1.setHTML(document.getElementById("inp_htmlcode").value)
                    editor1.attachEvent("change", function () {
                        document.getElementById("inp_htmlcode").value = editor1.getHTMLCode();
                    });
                </script>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="form-group col-auto">
                    <label asp-for="ImageURL" class="control-label"></label>
                    <input asp-for="ImageURL" class="form-control" />
                    <span asp-validation-for="ImageURL" class="text-danger"></span>
                </div>
                <div class="form-group col-auto">
                    <label asp-for="WebsiteURL" class="control-label"></label>
                    <input asp-for="WebsiteURL" class="form-control" />
                    <span asp-validation-for="WebsiteURL" class="text-danger"></span>
                </div>
            </div>

            <!-- Tag Dropdown Selector (from: https://www.tutorialsteacher.com/mvc/htmlhelper-dropdownlist-dropdownlistfor) -->
            <div class="form-group">
                <label asp-for="Tags" class="control-label"></label>




                @*
                    //TODO: Get the dropdown list to work with the dynamic add row button.
                *@

                @Html.DropDownListFor( t => t.Tags, tags, new { @class = "form-control" } )
                <span asp-validation-for="Tags" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-auto">
                    <button id="addRow" type="button" class="btn btn-primary mb-2">Add a Tag</button>
                    <div id="newRow">
                        <input type="hidden" id="total" value="0" />
                    </div>
                </div>
            </div>
            <hr />
            <div class="form-group">
                <button data-btn-form-create></button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync( "_ValidationScriptsPartial" );}

    <!--Accreditation - 
        Special thanks to RenaNi-MSFT for a guide on how to dynamically add input fields to a form within a razorpage: https://docs.microsoft.com/en-us/answers/questions/598813/dynamic-generation-of-form-fields-in-razor-pages.html
        -->
    <script>
        $("#addRow").click(function () {
            var rowCount = parseInt($("#total").val());
            rowCount++;
            $("#total").val(rowCount);
            var html = '';
            html += '<div id="inputRow" class="input-group">';
            html +=     '<input type="text" class="form-control mb-2" name="[' + (rowCount - 1) + '].Name"  />';
            html +=     '<div class="input-group-append">'
            html +=         '<button id="removeRow" class="mb-2" type="button">Remove</button>';
            html +=     '</div>';
            html += '</div>';

            $('#newRow').append(html);
            document.getElementById("addRow").innerHTML = (rowCount > 0) ? "Add Another Tag" : "Add a Tag"
        });
        $(document).on('click', '#removeRow', function () {
            var rowCount = parseInt($("#total").val());
            rowCount--;
            $("#total").val(rowCount);
            $(this).closest('#inputRow').remove();
        });
    </script>
}

