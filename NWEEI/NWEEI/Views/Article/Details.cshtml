@model NWEEI.Models.Article

@{
    ViewData["Title"] = "Details";
}

<a data-btn-back asp-action="Index">to Articles</a>

<div>
    <!-- article header: title, publish date, edit option-->
    <div>
        <div>
            <h1>
                @Model.Title
                @if (User.IsInRole("Admin"))
                {
                    <a data-btn-edit asp-action="Edit" asp-route-id="@Model.ArticleID">Edit Article</a>
                }
            </h1>
        </div>

        <div class="content-header">
            <!-- admin edit button -->

            <!-- publish date -->
            <span class="publish-date"><i>Published on @Model.PublishDate.ToShortDateString()</i></span>
        </div>
        
    </div>

    <hr />

    <!-- article body -->
    <div class="article-body">
        @Html.Raw(Model.Body)
    </div>
</div>
