@model NWEEI.Models.FAQ

@{
    ViewData["Title"] = "Delete";
}

<div class="custom-breadcrumb">
    <a asp-action="Manage">
        <span class="breadcrumb-icon"><i class="fa fa-chevron-left" aria-hidden="true"></i></span>
        <span class="breadcrumb-name">Back to FAQs</span>
    </a>
</div>

<h3>Are you sure you want to delete this FAQ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Question)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Question)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Answer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Answer)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="FAQID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
