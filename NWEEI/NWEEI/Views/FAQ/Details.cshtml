@model NWEEI.Models.FAQ

@{
    ViewData["Title"] = "Details";
}

<div class="custom-breadcrumb">
    <a asp-controller="FAQ" asp-action="Manage">
        <span class="breadcrumb-icon"><i class="fa fa-chevron-left" aria-hidden="true"></i></span>
        <span class="breadcrumb-name">Back to FAQs</span>
    </a>
</div>


<div>
    <!-- FAQ header: title, edit option -->
    <div>
        <div><h3>@Model.Question</h3></div>

        <div class="content-header">
            <!-- admin edit button -->

            @if (User.IsInRole("Admin"))
            {
                <span class="admin-action-button btn btn-primary">
                    <a asp-action="Edit" asp-route-id="@Model.FAQID">Edit FAQ</a>
                </span>
            }

            <!-- category -->
            <span><i>Category: @Model.Category.Name</i></span>

        </div>
    </div>
    <hr />

    <!-- FAQ answer -->
    <div>
        @Html.Raw(Model.Answer)
    </div>
</div>
