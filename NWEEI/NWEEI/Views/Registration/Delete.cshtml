@model NWEEI.Models.Registration

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this training registration?</h3>
<div>
    <hr />
    <h4>@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName),</h4>
    <h5 class="text-muted"> Submitted on @Html.DisplayFor(model => model.DateSubmitted)</h5>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrainingProgram)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrainingProgram)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="RegistrationID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
